# ===========================================
# KOSA Frontend Environment Configuration
# ===========================================

# Application Settings
REACT_APP_NAME=KOSA Review Analysis
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Backend API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=10000

# WebSocket Configuration
REACT_APP_WS_URL=http://localhost:3001
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=5

# External Services
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_MOCK_SERVICE=false

# Performance Settings
REACT_APP_MAX_REVIEWS_PER_PAGE=50
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_CACHE_DURATION=300000

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ANIMATION_DURATION=300

# Development Tools
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_LOG_LEVEL=info

